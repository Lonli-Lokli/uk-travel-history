{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "../../apps/uk-travel-history/.next/types/**/*.ts",
    "../../dist/apps/uk-travel-history/.next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "vitest.config.ts",
    "vitest.setup.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../packages/auth/client"
    },
    {
      "path": "../../packages/trip-store"
    },
    {
      "path": "../../packages/parser"
    },
    {
      "path": "../../packages/rules"
    },
    {
      "path": "../../packages/widgets"
    },
    {
      "path": "../../packages/domain"
    },
    {
      "path": "../../packages/flow"
    },
    {
      "path": "../../packages/db"
    },
    {
      "path": "../../packages/stores"
    },
    {
      "path": "../../packages/features"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/auth/server"
    },
    {
      "path": "../../packages/payments/server"
    },
    {
      "path": "../../packages/utils"
    }
  ]
}
